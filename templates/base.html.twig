{# templates/base.html.twig #}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Bienvenue !{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('/styles/scss/main.css') }}">  
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="{{ asset('images/logo.png') }}" alt="Renov'Logement Logo" height="130" class="mb-2" style="border-radius: 50%;">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a class="nav-link" href="{{ path('app_home') }}">Accueil</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_contact') }}">Contact</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_realisations') }}">Réalisations</a></li>
            </ul>
        </div>
    </nav>
    <div class="content">
        {% block body %}{% endblock %}
    </div>

    <footer class="bg-light text-center text-lg-start mt-5">
        <div class="container p-4">
            <div class="row justify-content-center align-items-center">
                <div class="col-lg-3 col-md-12 mb-4 mb-md-0 d-flex flex-column align-items-center">
                    <img src="{{ asset('images/logo.png') }}" alt="Renov'Logement Logo" height="80" class="mb-2">
                    <h5 class="text-uppercase">Renov'Logement</h5>
                    <p class="text-center">
                        Nous partageons votre projet!
                    </p>
                </div>
    
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0 d-flex flex-column align-items-center">
                    <h5 class="text-uppercase">Liens utiles</h5>
                    <ul class="list-unstyled mb-0 text-center">
                        <li><a href="{{ path('app_home') }}" class="text-dark">Accueil</a></li>
                        <li><a href="{{ path('app_contact') }}" class="text-dark">Contact</a></li>
                        <li><a href="{{ path('app_realisations') }}" class="text-dark">Réalisations</a></li>
                    </ul>
                </div>
    
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0 d-flex flex-column align-items-center">
                    <h5 class="text-uppercase">Suivez-nous</h5>
                    <ul class="list-unstyled mb-0 text-center">
                        <li><a href="https://www.instagram.com/renov__logement?igsh=MW5jdzkwdWQ4eHlsZw==" class="text-dark">
                            <i class="bi bi-instagram"></i> Instagram </a> </li>
                    </ul>
                </div>
            </div>
        </div>
    
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © {{ "now"|date("Y") }} Renov'Logement. Tous droits réservés.
        </div>
    </footer>
    
    
    

    
    

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>


</html>


